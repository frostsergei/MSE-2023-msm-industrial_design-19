<UserControl x:Class="Setup_database_for_device.View.SystemForm.CheckboxControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Setup_database_for_device.View.SystemForm"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.7*"></ColumnDefinition>
            <ColumnDefinition Width="0.3*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <TextBlock TextWrapping="Wrap" Name="CheckboxText" VerticalAlignment="Center" Grid.Row="0" Grid.Column="0" FontFamily="Verdana" FontSize="9pt"  />
        <CheckBox Name="CheckboxInput" VerticalAlignment="Center" FontFamily="Verdana" FontSize="9pt" HorizontalAlignment="Left" Grid.Row="0" Grid.Column="1" Checked="CheckboxInput_Checked" Unchecked="CheckboxInput_Checked" />
    </Grid>
</UserControl>
